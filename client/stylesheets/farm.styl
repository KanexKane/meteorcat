.farm
    .jumbotron
        margin 0
        border-radius 0
        color white
    .hero-technology
        color white
        text-align center
        background-size cover
        background-position center
        background-repeat no-repeat
        width 100%
    .hero-title
        text-shadow 0 2px 2px rgba(black,0.3)
        color white
        font-weight 500
    .hero-subtitle
        max-width 700px
        margin 25px auto
        padding 10px 15px
        background-color rgba(black,0.4)
        color white
        text-shadow 0 1px 1px rgba(black,0.7)
        font-weight 500
        font-size 28px
    .cat-list
        padding 2%
    .cat-thumbnail
        width 100%
        box-shadow 0 4px 8px 0 rgba(black, 0.2), 0 6px 20px 0 rgba(black, 0.19)
    .cat-list-info
        width 100%
        font-size 20px
        font-weight bold
        text-align content ''