$pinkBorderColor = #FDB6B3
$pinkButtonColor = #FF807B
$pinkBGColor = #F9BFBE
$yellowBorderColor = #FFD383
$yellowBGColor = #F8E0B7
$yellowLight = #FFA97E
$grayBGColor = #EBEBEB

$maxWidthXS = 767px
$minWidthSM = 768px
$maxWidthSM = 991px
$minWidthMD = 992px
$maxWidthMD = 1199px
$minWidthLG = 1200px

@import 'https://fonts.googleapis.com/css?family=Athiti|Prompt&subset=thai';

// font-family 'Athiti', sans-serif
// font-family 'Prompt', sans-serif

.farm
    font-family 'Prompt', sans-serif
    overflow-x hidden
    width 100%
    .nav .open > a, .nav .open > a:hover, .nav .open > a:focus
        background-color #73fcd6
        color $pinkColor
    .navbar
        border-radius 0
        .icon-bar
            background-color #73fcd6
    .navbar-cat
        background-color #ff7e79
        color white
        margin-bottom 0
        li
            a
                color white
                text-decoration none
                &:hover, &:focus
                    background-color transparent
            &:hover
                a
                    color #fff67e
                    text-decoration underline
            &.active
                a
                    color #fff67e
                    text-decoration underline
    .navbar-brand
        img
            height 50px
            margin-top -14px
    .wrapper
        border 1px solid $yellowBorderColor
    .cat-bg-image
        height 430px
    .cat-bg-image-subtitle
        float right
        height 430px
        width 54%
        text-align left
        padding 5% 5% 2% 5%
        background-color rgba(black, 0.5)
        color white
        font-weight 500
        font-size 28px
        @media (min-width $maxWidthMD)
            width 60%
        &:after
            content ''
            display block
            clear both
        .price
            text-decoration underline
            text-align right
    
    .cat-detail-gallery
        padding-top 20px
        background-color #ffbebb
        .main-pic
            text-align center
            margin-bottom 3%
            img
                max-width 100%
        .list-pic
            background-color rgba(black,0.3)
            padding 1% 0
            .list-pic-thumbnail
                margin 2% 0
    .cat-detail-cat
        background-color #ffe9bb
        h2
            text-decoration underline
            text-align right
        img
            max-height 300px
            float left
            margin-top -6%
            margin-right 2%
            @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                margin-left -4%
        .cat-price
            text-align right
            font-size 1.3em
            text-decoration underline
            span
                text-decoration line-through
        @media (max-width $maxWidthXS)
            font-size 1.2em
        @media (min-width $minWidthSM)
            font-size 1.3em
    .cat-father
        background-color #ffbebb
    .cat-father-mother
        background-color #ffbebb
    .cat-father-info
    .cat-mother-info
        margin-top 5%
        margin-bottom 5%
        .cat-father-thumbnail
        .cat-mother-thumbnail
            width 100%
            height 350px
        .cat-father-desc
        .cat-mother-desc
            background-color rgba(black, 0.8)
            color white
            text-align right
            padding 3% 5%
            margin-top -11.5%
            @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                margin-top -9%
        
    .thumbnail-cat-detail-gallery
        margin-bottom 10px
    .img-cat-detail-gallery
        transition:all .2s
        width 100%
        cursor pointer
        &:hover
            border 5px solid white
        @media (max-width $maxWidthXS)
            height 100px
        @media (min-width $minWidthSM) and (max-width $maxWidthSM)
            height 150px
        @media (min-width $minWidthMD) and (max-width $maxWidthMD)
            height 160px
        @media (min-width $minWidthLG)
            height 150px
    .farm-cover
        width 100%
        img
            width 100%
    .farm-logo
        text-align center
        img
            margin-top -15%
            max-width 150px 
            @media (max-width $maxWidthXS)
                margin-top -30%
                max-width 225px
                max-height 225px
            @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                margin-top -20%
                max-width 325px
                max-height 325px  
            @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                margin-top -32%
                max-width 325px
                max-height 325px
            @media (min-width $minWidthLG)
                margin-top -31%
                max-width 325px
                max-height 325px
    .farm-desc
        font-size 1.2em
        margin-bottom 10px
        h1
            text-align center
            text-decoration underline
            margin-top 0
    .farm-info
        background-color $grayBGColor
        width 100%
        padding 2% 0
        @media (min-width $maxWidthSM)
            padding 2% 0 0 0
    .nav-farm-menu
        button
            width 100%
            background-color #ffd386
            border 2px solid $yellowBorderColor
            color #6e2800
            text-decoration underline
            font-size 1.5em
            @media (max-width $maxWidthSM)
                padding 5px
                margin-bottom 10px
        @media (max-width $maxWidthXS)
            margin-top 20px
        @media (min-width $maxWidthSM)
            background-color #ffd386
        @media (min-width $maxWidthMD)
            width 109%
        .cat-over-btn
            width 100%
            @media (max-width $maxWidthXS)
                width 40%
            @media (max-width $maxWidthSM)
                width 25%
            @media (min-width $maxWidthSM) and (max-width $maxWidthMD)
                width 150%
                position absolute
                top -15px
                left -39px
            @media (min-width $maxWidthMD)
                width 150%
                position absolute
                top -29px
                left -35px
                z-index 1
    .farm-editor-header
        padding 2%
        font-size 1.2em
        background-color #ffe9bb
        border 2px solid $yellowBorderColor
    .cat-breed
    .cats-in-breed
        padding 3% 0 5% 0
        border-bottom 1px solid $yellowBorderColor
        color #945200
        background-color #ffe9bb
        &:nth-of-type(even)
            background-color #ffbebb
    .cats-in-breed
        background-color #bbbfff
        h1
            color white
            text-align right
            @media (max-width $maxWidthXS)
                font-size 1.4em
                padding-right 2%
            @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                font-size 1.8em
            @media (min-width $minWidthMD)
                font-size 2em
                padding-right 1%
        .cat-list
            padding 0
            border 1px solid #ffd479
            margin-bottom 2%
            @media (max-width $maxWidthXS)
                width 49%
                float left
                &:nth-of-type(odd)
                    margin-right 2%
            @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                width 49%
                float left
                &:nth-of-type(odd)
                    margin-right 2%
            @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                width 32.3%
                float left
                &:nth-child(3n-0)
                    margin 0 1% 0 1%
            @media (min-width $minWidthLG)
                width 24%
                float left
                &:nth-child(4n-1)
                    margin 0 1% 0 1%
                &:nth-child(4n-0)
                    margin 0 1% 0 0
            a
                text-decoration none
    .cat-breed-title
        text-align center
        text-decoration underline
    .cat-breed
        .cat-list
            padding 0
            border 1px solid #ffd479
            margin-bottom 2%
            @media (max-width $maxWidthSM)
                width 49%
                float left
                &:nth-of-type(even)
                    margin-right 2%
            @media (min-width $maxWidthSM) and (max-width $maxWidthMD)
                width 32.3%
                float left
                &:nth-child(3n-1)
                    margin 0 1% 0 1%
            @media (min-width $maxWidthMD)
                width 24%
                float left
                &:nth-child(4n-3)
                    margin 0 1% 0 1%
                &:nth-child(4n-2)
                    margin 0 1% 0 0
                
            &.is-first
                @media (max-width $maxWidthSM)
                    margin-right 2%;
            a
                text-decoration none
    .cat-thumbnail
        @media (max-width $maxWidthXS)
            width 100%
            height 171px
        @media (min-width $maxWidthXS) and (max-width $maxWidthSM)
            width 351px
            height 351px
        @media (min-width $maxWidthSM) and (max-width $maxWidthMD)
            width 302px
            height 302px
        @media (min-width $maxWidthMD)
            width 271px
            height 271px
    .cat-list-info
        width 100%
        background-color #ffd479
        font-size 1.1em
        color #762D0D
        padding 10px 10px 5px 10px
        p
            line-height 1em
            &:last-child
                padding-bottom 0
                margin-bottom 0
    .cat-info-price
        background-color #ff7e79
        color #FFF
        font-size 1.2em
        width 100%
        padding 5px 0
        text-align center
        text-decoration underline
    .btn-cat-all
        margin-top 5%
        background-color #9437ff
        border-radius 15px
        font-size 1.5em
        color #f9fae2
        text-decoration underline
        padding 5px 0
        text-align center
        border 2px solid #ffd479
        a
            text-decoration none
            color white
    .promotion-content
        background-color #ffbebc
        h1
            text-align center
            @media (max-width $maxWidthXS)
                font-size 1.8em
            img
                margin-top -18px
                @media (max-width $maxWidthXS)
                    max-width 80px
                @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                    max-width 100px
                @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                    max-width 120px
                @media (min-width $minWidthLG)
                    max-width 150px
    .contactus-content
        background-color #baeaff
        h1
            text-align center
        @media (max-width $maxWidthXS)
            img
                max-width 100%
    .contactus-editor
        font-size 1.2em
    .contactus-map
        text-align center
        img
            max-width 100%
            margin 0 auto
    .contactus-google-map
    .contactus-google-map2
        text-align center
        iframe
            @media (max-width $maxWidthXS)
                height 250px
            @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                height 350px
            @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                height 450px
            @media (min-width $minWidthLG)
                height 300px
    .contactus-google-map2 
        background-color #ffbebb
    
    .footer
        background-color #929292
        padding 0
        .copyright
            background-color $pinkButtonColor
            text-align center
            font-size 1em
            img
                max-height 44px
                @media (max-height $maxWidthXS)
                    max-height 65px
        .information
            font-size 1.2em
            padding 10px 0
            text-align center
            img
                max-width 50px
                max-height 40px
                @media (min-width: $minWidthSM)
                    margin-left 50px
            .farm-title
                font-size 1.5em
                color #00EEFE
            .visible-xs-block
                p
                    line-height 45px
                .col-xs-6.text-left
                    padding 0
    .related-cats
        text-align center
        padding 1% 0 3% 0
        .item
            border 2px solid #FF932B
            .item-thumbnail
                position relative
                background-color white
                overflow hidden
                height 150px
                a
                    color white
                    text-decoration none
                    &:hover
                        color #575757
            .item-title
                text-align right
                font-size 1.4em
                padding 10px
                height 2.3em
                overflow hidden
                background-color #aeaeae
                word-wrap break-word
                color white
                a
                    color white
        .related-cat
            padding 2% 0
        .row
            margin 0
        .owl-carousel 
            position relative
        .owl-prev,
        .owl-next 
            position absolute
            top 50%
            margin-top -10px // Half of the prev/next buttons height here in negatives to center them perfectly
        .owl-prev 
            left 0
        .owl-next 
            right 0
        @media (max-width $maxWidthXS)
            background-color #ffbebb
        @media (min-width $minWidthSM) and (max-width $maxWidthSM)
            background-color #ffbebb