$pinkColor = #ff7e79
$purpleColor = #9437ff
$greenColor = #73fcd6

body
    margin 0
    padding 0
    .frontend
        overflow-x hidden
        background-color #ebebeb
        width 100%
        hr
            border 1px solid #cecece
        .content
            margin-bottom 60px
        .breadcrumbs
            background-color transparent
        .nav .open > a, .nav .open > a:hover, .nav .open > a:focus
            background-color $greenColor
            color $pinkColor
        .navbar
            border-radius 0
            .icon-bar
                background-color $greenColor
        .navbar-cat
            background-color $pinkColor
            color white
            margin-bottom 0
            li
                a
                    color white
                    text-decoration none
                    &:hover, &:focus
                        background-color transparent
                &:hover
                    a
                        color #fff67e
                        text-decoration underline
                &.active
                    a
                        color #fff67e
                        text-decoration underline
        .navbar-brand
            img
                height 50px
                margin-top -14px
        .cover
            background-image url(/images/cover_catland.png)
            background-repeat no-repeat
            background-size cover
            background-position center
            height 700px
            width 100%
            text-align center
            @media (max-width: 480px)
                width 96%
            .cover-title
                font-size 30px
                color: white;
                text-shadow: -2px 0 $purpleColor, 0 2px $purpleColor, 2px 0 $purpleColor, 0 -2px $purpleColor;
            .cover-slogan
                font-size 24px
                color: white;
                text-shadow: -2px 0 $pinkColor, 0 2px $pinkColor, 2px 0 $pinkColor, 0 -2px $pinkColor;
            img
                margin 0
                @media (max-width: 499px)
                    margin-left 12%
                @media (min-width:500px) and (max-width: 600px)
                    margin-left 10%
                @media (min-width:601px) and (max-width: 767px)
                    margin-left 9%
        header.page-header
            border none
            margin 40px 0 0 0 !important
            padding 5px
            text-align center
            color #0099F7
            h1
                margin 0
        .breadcrumb
            background-color transparent
            color #011F8D
            a
                color #011F8D   
            & > li
                &:before
                    padding 0 5px
                    color #011F8D
                    content "/\00a0"
                a
                    color #011F8D
            & > li
                & + li
                  &:before
                    padding 0 5px
                    color #011F8D
                    content "/\00a0"
        .entry-post
            margin-bottom 20px
            .post-thumbnail
                position relative
                background-color white
                overflow hidden
                height 150px
                a
                    color white
                    text-decoration none
                    &:hover
                        color #575757
                img
                    width 100%
                    position absolute
                    top 0
                    left 0
                    &:hover + .over-image
                            opacity 1
                            background-color white

                .over-image
                    opacity 0
                    position absolute
                    top: 78%;
                    left: 50%;
                    transform: translate(-50%, -150%);
                    background-color #8d8d8d
                    padding 10px
                    box-shadow 0 2px 5px 3px rgba(black,0.5)
                    text-transform uppercase
                    transition all 0.5s ease
                    &:hover
                        opacity 1
                        background-color white
                        a
                            color #575757
            .post-title
                text-align center
                font-size 1.2em
                padding 10px 10px
                height 3.2em
                overflow hidden
                background-color #7a81ff
                word-wrap break-word
                color white
                a
                    color white
            .post-date
                font-size 0.7em
                text-align right
                padding 15px 10px 5px 0
                color white
                background-color #7a81ff
        .paging
            margin-top 20px
            .btn-paging
                background-color #8d8d8d
                color white
                display block
                text-align center
                padding 5px 0
                border-radius 3px
                box-shadow 0 2px 5px 1px rgba(black,0.5)
                text-decoration none
                transition all 0.3s ease
                &:hover
                    transform scale(1.3)
        .post-content
            background-color #C5F0E5
            border 3px solid $pinkColor
            padding 10px
            .post-content-header
                text-align center
                .post-featured-image
                    overflow-y hidden
                    max-height 500px
                    img
                        width 100%
            .post-content-detail
                padding 0 20px
        .footer-banner
            background-color #929292
            padding 10px 0 0 0
            margin 0 0 30px 0
            text-align center
            div
                margin 0 0 10px 0
            img
                margin 0 auto
        .footer
            background-color #929292
            color white
            .copyright
                background-color $pinkColor
                text-align center
                img
                    max-height 44px
            .information
                padding 10px 0
                text-align center
                img
                    max-width 50px
                    @media (min-width: 768px)
                        margin-left 50px
        .post-content-header
            margin-bottom 40px
            word-wrap break-word
        .post-content-body
            font-size 1.4em
            margin-bottom 40px
            min-height 300px
            img
                max-width 100%
.text-blue-light
    color #00EEFE