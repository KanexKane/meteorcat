$pinkColor = #ff7e79
$purpleColor = #9437ff
$greenColor = #73fcd6

$maxWidthXS = 767px
$minWidthSM = 768px
$maxWidthSM = 991px
$minWidthMD = 992px
$maxWidthMD = 1199px
$minWidthLG = 1200px

body
    margin 0
    padding 0
    .nav
        padding-top 5px
    .frontend
        font-family 'Prompt', sans-serif
        overflow-x hidden
        background-color #ebebeb
        width 100%
        hr
            border 1px solid #cecece
        .content
            margin-bottom 60px
        .breadcrumbs
            background-color transparent
        .nav .open > a, .nav .open > a:hover, .nav .open > a:focus
            background-color $greenColor
            color $pinkColor
        .navbar
            border-radius 0
            .icon-bar
                background-color $greenColor
        .navbar-cat
            background-color $pinkColor
            color white
            margin-bottom 0
            li
                a
                    color white
                    text-decoration none
                    &:hover, &:focus
                        background-color transparent
                &:hover
                    a
                        color #fff67e
                        text-decoration underline
                &.active
                    a
                        color #fff67e
                        text-decoration underline
        .navbar-brand
            img
                height 50px
                margin-top -14px
        .cover
            background-image url(/images/cover_catland.png)
            background-repeat no-repeat
            background-size cover
            background-position center
            height 700px
            width 100%
            text-align center
            @media (max-width: 480px)
                width 96%
            .cover-title
                font-size 30px
                color: white;
                text-shadow: -2px 0 $purpleColor, 0 2px $purpleColor, 2px 0 $purpleColor, 0 -2px $purpleColor;
            .cover-slogan
                font-size 24px
                color: white;
                text-shadow: -2px 0 $pinkColor, 0 2px $pinkColor, 2px 0 $pinkColor, 0 -2px $pinkColor;
            img
                margin 0
                @media (max-width: 499px)
                    margin-left 12%
                @media (min-width:500px) and (max-width: 600px)
                    margin-left 10%
                @media (min-width:601px) and (max-width: 767px)
                    margin-left 9%
        header.page-header
            border none
            margin 40px 0 0 0 !important
            padding 5px
            text-align center
            color #0099F7
            h1
                margin 0
        .breadcrumb
            background-color transparent
            color #011F8D
            a
                color #011F8D   
            & > li
                &:before
                    padding 0 5px
                    color #011F8D
                    content "/\00a0"
                a
                    color #011F8D
            & > li
                & + li
                  &:before
                    padding 0 5px
                    color #011F8D
                    content "/\00a0"
        .entry-post
            margin-bottom 20px
            .post-thumbnail
                position relative
                background-color white
                overflow hidden
                height 150px
                a
                    color white
                    text-decoration none
                    &:hover
                        color #575757
                img
                    width 100%
                    position absolute
                    top 0
                    left 0
                    &:hover + .over-image
                            opacity 1
                            background-color white

                .over-image
                    opacity 0
                    position absolute
                    top: 78%;
                    left: 50%;
                    transform: translate(-50%, -150%);
                    background-color #8d8d8d
                    padding 10px
                    box-shadow 0 2px 5px 3px rgba(black,0.5)
                    text-transform uppercase
                    transition all 0.5s ease
                    &:hover
                        opacity 1
                        background-color white
                        a
                            color #575757
            .post-title
                text-align center
                font-size 1.2em
                padding 10px 10px
                height 3.2em
                overflow hidden
                background-color #7a81ff
                word-wrap break-word
                color white
                a
                    color white
            .post-date
                font-size 0.7em
                text-align right
                padding 15px 10px 5px 0
                color white
                background-color #7a81ff
        .paging
            margin-top 20px
            .btn-paging
                background-color #8d8d8d
                color white
                display block
                text-align center
                padding 5px 0
                border-radius 3px
                box-shadow 0 2px 5px 1px rgba(black,0.5)
                text-decoration none
                transition all 0.3s ease
                &:hover
                    transform scale(1.3)
        .post-content
            background-color #C5F0E5
            border 3px solid $pinkColor
            padding 10px
            .post-content-header
                text-align center
                .post-featured-image
                    overflow-y hidden
                    max-height 500px
                    img
                        width 100%
            .post-content-detail
                padding 0 20px
        .footer-banner
            background-color #929292
            padding 10px 0 0 0
            margin 0 0 30px 0
            text-align center
            div
                margin 0 0 10px 0
            img
                margin 0 auto
        .footer
            background-color #929292
            color white
            .copyright
                background-color $pinkColor
                text-align center
                .row
                    text-align left
                img
                    max-height 44px
                    @media (max-width $maxWidthXS)
                        max-height 65px
            .information
                padding 10px 0
                img
                    max-width 50px
                    @media (min-width: 768px)
                        margin-left 50px
                .visible-xs-block
                    div
                        padding-right 0
                        padding-left 2%
                    p
                        line-height 45px
                a
                    color white
        .post-content-header
            margin-bottom 40px
            word-wrap break-word
        .post-content-body
            font-size 1.4em
            margin-bottom 40px
            min-height 300px
            img
                max-width 100%
        .related-posts
            .item
                border 2px solid #FF932B
                .item-thumbnail
                    position relative
                    background-color white
                    overflow hidden
                    height 150px
                    a
                        color white
                        text-decoration none
                        &:hover
                            color #575757
                .item-title
                    text-align center
                    font-size 1.2em
                    padding 10px 10px
                    height 3.2em
                    overflow hidden
                    background-color $pinkColor
                    word-wrap break-word
                    color white
                    a
                        color white
            .related-post
                padding 2% 0
                background-color #929292
            .row
                margin 0
            .owl-carousel 
                position relative
            .owl-prev,
            .owl-next 
                position absolute
                top 50%
                margin-top -10px // Half of the prev/next buttons height here in negatives to center them perfectly
            .owl-prev 
                left 0
            .owl-next 
                right 0
        .comment-form
            margin 2% 0
            background-color white
            padding 3%
            input[type=text]
                background-color #FF7E79
                color white
            textarea
                background-image url('images/cat5.png')
                background-repeat no-repeat
                background-position right 120%
                background-color #FF7E79
                min-height 200px
                color white
            .image-over-add-comment
                margin 15% auto 0 auto
            .btn-add-comment
                padding 1%
                background-color black
                color white
                text-align center
                font-size 20px
                width 100%
                border-radius 20% 20% 20% 20%
                @media (min-width $minWidthMD)
                    border-radius 10px
                    padding 5% 0
        .comments
            margin-top 40px
            .comment
                margin-bottom 40px
                img
                    width 200px
                    height 200px
                    z-index 1
                    position absolute
                    background-color black
                    @media(max-width $maxWidthXS)
                        width 60px
                        height 60px
                        position relative
                        float left
                .comment-author
                    padding-left 20%
                    @media(max-width $maxWidthXS)
                        font-size 15px
                        margin-left 5%
                    @media(min-width $minWidthSM) and (max-width $maxWidthSM)
                        padding-left 30%
                .comment-message
                    background-color #DCDCDC
                    width 90%
                    float right
                    min-height 160px
                    padding 1% 0 0 10%
                    @media(max-width $maxWidthXS)
                        width 100%
                        float none
                        min-height 100px
                        padding 3% 3% 1% 3%
        .next-comment
            text-align center
            font-size 1.2em
            transition all 0.5s ease
            a
                text-decoration none
            &:hover
                text-shadow 0px 0 100px $pinkColor
        .register-cat
            @media (max-width $maxWidthXS)
                width 140px
                margin-left -20px
                margin-top 
            @media (min-width $minWidthSM)
                max-width 100%
        .register-header
            color #FC6666
            font-size 4em
            text-align right
            margin 3% 3% 0 0
            @media (max-width $maxWidthXS)
                font-size 2em
                margin 5% 5% 3% 0
        .register-form
            font-family 'Prompt', sans-serif
            label
                color #0096FF
                font-size 16px
            button
                background-color #5E5E5E
                color #73FCD6
                width 90%
                margin 0 auto
                font-size 20px
                @media(min-width $minWidthSM)
                    width 100%          
        .popular-cats
            background-color #327191
            width 100%
            padding 0 0 3% 0
            h2
                color white
                text-align right
            .item
                .item-thumbnail
                    position relative
                    background-color white
                    overflow hidden
                    height 200px
                    @media(max-width $maxWidthXS)
                        height 185px
                    @media(min-width $minWidthMD) and (max-width $maxWidthMD)
                        height 195px
                    a
                        color white
                        text-decoration none
                        &:hover
                            color #575757
                .item-title
                    text-align center
                    font-size 2em
                    padding 10px 10px
                    color black
                    position absolute
                    margin-top -18%
                    z-index 1
                    background-color rgba(white, 0.7)
                    @media(max-width $maxWidthXS)
                        font-size 1.5em
                    a
                        color black
                        text-decoration underline
            .row
                margin 0
            .owl-carousel 
                position relative
                width 90%
                margin 0 0 0 3.5%
                @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                    margin 0 0 0 4%
                @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                    margin 0 0 0 5%
                @media (min-width $minWidthLG)
                    margin 0 0 0 5%
            .owl-prev,
            .owl-next 
                position absolute
                top 50%
                margin-top -10px
            .owl-prev 
                left -7%
                @media (min-width $minWidthLG)
                    left -5%
            .owl-next 
                right -7%
                @media (min-width $minWidthLG)
                    right -5%
        .latest-farm
            background-color #B9F2E1
            h2
                text-align right
            .latest-farm-list
                
                img
                    max-width 100%
                    @media (max-width $maxWidthXS)
                        max-height 120px
                    @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                        max-height 150px
                    @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                        max-height 130px
                    @media (min-width $minWidthLG)
                        max-height 150px
                a
                    color #19A0FF
                    font-size 1.2em
                    @media (min-width $minWidthMD)
                        color #76298E
                        font-size 1.4em
                    @media (min-width $minWidthLG)
                        color #76298E
                        font-size 1.6em
                @media (max-width $maxWidthXS)
                    height 170px
                    overflow hidden
                @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                    margin-bottom 2%
                @media (min-width $minWidthMD)
                    padding 0.5% 0
                    border 3px solid #FADDE6
                    width 24.5%
                    background-color #73FCD6
                    &:nth-child(4n-2)
                        margin-left 0.5%
                    &:nth-child(4n-1)
                        margin 0 0.5% 1% 0.5%
        .all-farms-list
            img
                max-width 100%
                @media (max-width $maxWidthXS)
                    max-height 150px
                @media (min-width $minWidthSM) and (max-width $maxWidthSM)
                    max-height 250px
                @media (min-width $minWidthMD) and (max-width $maxWidthMD)
                    max-height 160px
                @media (min-width $minWidthLG)
                    max-height 200px
            hr
                margin 5px 0
                @media (max-width $maxWidthSM)
                    border 3px solid #73FCD6
                    -webkit-border-radius 100px
                    -moz-border-radius 100px
                    border-radius 100px
            a
                color #19A0FF
                font-size 1.2em
                @media (min-width $minWidthMD)
                    color #76298E
                    font-size 1.4em
                @media (min-width $minWidthLG)
                    color #76298E
                    font-size 1.6em
            @media (min-width $minWidthMD)
                padding 0.5% 0
                border 3px solid #FADDE6
                width 33%
                background-color #73FCD6
                &:nth-child(3n-1)
                    margin 0 0.5% 1% 0.5%
        .next-farm
            transition all 0.5s ease
            margin-top 10px
            background-color #FEBDBB
            border 3px solid #FADDE6
            padding 5px 0
            text-align center
            pointer-events none
            a
                font-size 1.3em
                color black
                pointer-events auto
            &:hover
                border 3px solid black
                
