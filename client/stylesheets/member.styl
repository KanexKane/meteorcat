$textInfoColor = #1DC7EA
$textDangerColor = #FF4A55
$textWarningColor = #FF9500
$babelColor = #18d8a9
$bootstrapColor = #6f5499
$pinkColor = #ff7e79
$purpleColor = #9437ff
$greenColor = #73fcd6

$maxWidthXS = 767px
$minWidthSM = 768px
$maxWidthSM = 991px
$minWidthMD = 992px
$maxWidthMD = 1199px
$minWidthLG = 1200px

.member
    width 100%
    height 100vh
    background-color rgba(203, 203, 210, 0.15)
    overflow-x hidden
    h4, .h4
        font-size 22px
        line-height 30px
    .card
        border-radius 4px
        box-shadow 0 1px 2px rgba(black, 0.05), 0 0 0 1px rgba(63, 63, 68, 0.1)
        background-color #FFF
        margin-bottom 30px
        margin-top 20px
        .header
            padding 1em
            color $babelColor
        .title
            margin 0
            color #333
            font-weight 300
        .category
        .label
            font-size 14px
            font-weight 400
            color #9A9A9A
            margin-bottom 0px
        .content
            padding 15px 15px 10px 15px
        .footer
            padding 0
            background-color rgba(0, 0, 0, 0)
            line-height 30px
            .legend
                padding 5px 0
            div
                display inline-block
            hr
                margin-top 5px
                margin-bottom 5px
                border-color #DDD
        .stats
            color #a9a9a9
    .text-info
        color $textInfoColor !important
    .text-danger
        color $textDangerColor !important
    .text-warning
        color $textWarningColor !important
    .navbar-default
        background-color white
        border-bottom 1px solid #CCC
        margin-bottom 0
        .navbar-nav
            .active
                a
                    background-color $babelColor
                    color white
            a
                background-color white
                color $babelColor
                &hover
                    background-color $babelColor
                    color white
            ul.dropdown-menu
                li a
                    &:hover
                        background-color $babelColor
                        color white

        .navbar-brand
            color $babelColor
            font-weight bold
    ul.paging
        display inline-block
        padding 0
        margin 0
        li
            display inline
            a
                color black
                float left
                padding 8px 16px
                text-decoration none
                &.active
                    background-color #4CAF50
                    color white
                &:hover:not(.active)
                    background-color #ddd
    p.circle
        background-color #F5B6B3
        border-radius 50%
        color black
        display table
        font-weight bold
        font-size 1.3em
        width auto
        margin 0 auto
        margin-bottom 20px
        &:hover
            background-color #B1E1F5
        @media(max-width $maxWidthXS)
            width 130px
            height 130px
        @media(min-width $minWidthSM) and (max-width $maxWidthSM)
            font-size 2em
            width 220px
            height 220px
        @media(min-width $minWidthMD)
            font-size 2em
            width 200px
            height 200px
        span
            display table-cell
            vertical-align middle
            text-align center
            padding 0 15px
        a
            color black
    p.square
        background-color #B1E1F5
        padding 10%
        text-align center
        font-size 1.5em
        &:hover
            background-color #F5B6B3
        @media(min-width $minWidthSM) and (max-width $maxWidthSM)
            padding 5%
            font-size 2em
        @media(min-width $minWidthMD)
            padding 15% 5%
            font-size 2em
            margin 10% 0
        a
            color black
    img.over-square
        height 15vh
        position relative
        float right
        z-index 1
        margin-top -60px
        @media(min-width $minWidthSM) and (max-width $maxWidthSM)
            margin-top -105px
    .bg-member-01
        background url('/images/bg-member-01.png')
        background-repeat no-repeat
        background-position right
        background-color #EFEFEF
        background-size contain
        border-top 1px solid #7AFBD7
        border-bottom 1px solid #979797
    .bg-member-02
        background url('/images/bg-member-02.png')
        padding-top 20px
        min-height 150px
        background-repeat no-repeat
        background-position 40%
        background-color #EFEFEF
        background-size contain
        border-bottom 2px solid #FF7E79
        color #0096FF
        .counter-views
            font-size 3em
    .footer
        background-color #929292
        color white
        .copyright
            background-color $pinkColor
            text-align center
            .row
                text-align left
            img
                max-height 44px
                @media (max-width $maxWidthXS)
                    max-height 65px
        .information
            padding 10px 0
            img
                max-width 50px
                @media (min-width: 768px)
                    margin-left 50px
            .visible-xs-block
                div
                    padding-right 0
                    padding-left 2%
                p
                    line-height 45px
            a
                color white
    .profile-image
        max-width 100%
    .cat-list-group
        width 90%
        margin 5% auto 0 auto
